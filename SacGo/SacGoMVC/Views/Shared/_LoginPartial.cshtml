@using Microsoft.AspNetCore.Identity
@using SacGoMVC.Areas.Identity.Data
@inject SignInManager<SacGoUser> SignInManager
@inject UserManager<SacGoUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item mr-2 p-0">
        <a asp-area="Identity" asp-page="/Account/Register">
            <button type="button" class="btn btn-light btn-sm">
                <span class="nav-link text-dark font-weight-bold p-0">Register</span>
            </button>
        </a>
    </li>
    <li class="nav-item p-0">
        <a asp-area="Identity" asp-page="/Account/Login">
            <button type="button" class="btn btn-light btn-sm">
                <span class="nav-link text-dark font-weight-bold p-0">Login</span>
            </button>
        </a>
    </li>
}
</ul>
